# Environment Variables Template
# Copy this to .env and update values for production

# ── Database ──
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/senapati_hardware

# ── Security ──
# IMPORTANT: Change this to a strong random string in production (min 32 characters)
SECRET_KEY=your-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ── File Uploads ──
UPLOAD_DIR=uploads

# ── CORS Origins ──
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost,http://localhost:80

# ── PostgreSQL (for docker-compose) ──
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=senapati_hardware
